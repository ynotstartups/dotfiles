#!/bin/sh

brew install ripgrep

brew install autojump # command j

brew install bat # terminal syntax highlight

brew install fd

brew install fzf

brew install python3 # get latest python
python3 -m pip install -r requirements.txt

brew install vim  # get vim 9.0

# universal-ctags is better than `brew install ctags`
brew install universal-ctags

ln -s -F "$PWD"/.vimrc "$HOME"/.vimrc

ln -s -F "$PWD"/.gitconfig "$HOME"/.gitconfig

ln -s -F "$PWD"/.zshrc "$HOME"/.zshrc

ln -s -F "$PWD"/.gitignore_global "$HOME"/.gitignore_global

ln -s -F "$PWD"/.pdbrc "$HOME"/.pdbrc

ln -s -F "$PWD"/.fdignore "$HOME"/.fdignore

ln -s -F "$PWD"/.rgrc "$HOME"/.rgrc

ln -s -F "$PWD"/vim_python.py "$HOME"/.vim/python3/vim_python.py

ln -s -F "$PWD"/zsh.vim "$HOME"/.vim/after/syntax/zsh.vim
