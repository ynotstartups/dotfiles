#!/bin/sh

brew install ripgrep

brew install ctags

brew install autojump # command j

brew install bat # terminal syntax highlight

brew install fd

brew install fzf

ln -s -F "$PWD"/.vimrc "$HOME"/.vimrc

ln -s -F "$PWD"/.gitconfig "$HOME"/.gitconfig

ln -s -F "$PWD"/.ctags "$HOME"/.ctags

ln -s -F "$PWD"/.zshrc "$HOME"/.zshrc

ln -s -F "$PWD"/.gitignore_global "$HOME"/.gitignore_global

ln -s -F "$PWD"/.pdbrc "$HOME"/.pdbrc
