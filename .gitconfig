[push]
	default = current
	autoSetupRemote = true
[alias]
    a = add
    ac = !git add . && git commit -v -a
    ap = add --patch

    b = branch
    bs = for-each-ref --sort=-committerdate refs/heads/ --format='%(HEAD) %(color:magenta)%(refname:short)%(color:reset) %(color:yellow)%(objectname:short)%(color:reset) %(contents:subject) %(color:cyan)%(authorname)%(color:reset) (%(color:green)%(committerdate:short)%(color:reset))'

    c = commit -v
    ca = commit -v -a
    caa = commit -a --amend --no-edit
    camend = commit -v --amend
    cp = commit -v --patch

    d = diff
    dc = diff --cached
    do = diff origin/master...
    ds = diff --staged

    f = fetch
    fro = !git fetch origin && git rebase -i origin/master

    g = grep --ignore-case

    l = log
    l1 = log -1 -p
    lg = log --graph --oneline
    ll = log --format='%C(yellow)%h%C(reset) %s %C(cyan)%an%C(reset) (%C(green)%as%C(reset))'
    lp = log -p

    p = push

    rb = rebase
    rba = rebase --abort
    rbc = rebase --continue
    rbi = rebase -i

    rs = restore
    rso = restore --source=origin/master
    rss = restore --staged

    s = status

    sw = switch
[user]
	email = ynotstartups@gmail.com
	name = ynotstartups
[init]
	defaultBranch = main
[core]
	excludesfile = ~/.gitignore_global
[commit]
	template = /Users/yuhao.huang/Documents/dotfiles/.git_commit_msg.txt
[pager]
	branch = false
[rerere]
	enabled = true
[rebase]
	autosquash = true
[merge]
	conflictstyle = diff3
