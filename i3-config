client.focused          #009999 #007777 #FFFFFF #00F4F4   #007777

# rename workspace
# bindsym $mod+r exec i3-input -F 'rename workspace to "%s"' -P 'New name: '
bindsym $mod+r exec i3-input -F "rename workspace to "$(i3-msg -t get_workspaces | jq -r "map(select(.focused))[0].num"):%s"" -P "New name: "

# Enable auto back and forth
workspace_auto_back_and_forth yes

# lock with tiling tiger image
bindsym $mod+Control+Shift+l exec i3lock --image ~/Documents/dotfiles/tiger.png --tiling
