general {
        output_format = "none"
        colors = false
        interval = 5
}

order += "path_exists VPN"
order += "volume master"
order += "disk /"
order += "load"
order += "cpu_usage"
order += "memory"
order += "time"

path_exists VPN {
        # path exists when a VPN tunnel launched by nmcli/nm-applet is active
        path = "/proc/sys/net/ipv4/conf/tun0"
}

load {
        format = "%1min %5min %15min"
}

memory {
        format = "MEMORY: %used"
        threshold_degraded = "10%"
        format_degraded = "MEMORY: %free"
}

disk "/" {
        format = "%free"
}

volume master {
        format = "VOLUME: %volume"
        format_muted = "â™ª: muted (%volume)"
        device = "default"
        mixer = "Master"
        mixer_idx = 0
}

time {
        format = "%m-%d %H:%M:%S"
}

cpu_usage {
        format = "CPU: %usage"
}
