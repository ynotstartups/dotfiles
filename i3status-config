# documentation `man i3status`

general {
        output_format = "none"
        colors = false
        interval = 1
}

order += "cpu_temperature 0"
order += "battery 0"
order += "path_exists VPN"
# order += "volume master"
# order += "disk /"
order += "load"
# order += "cpu_usage"
order += "memory"
order += "time"

cpu_temperature 0 {
        format = "%degrees °C"
        path = "/sys/devices/platform/coretemp.0/hwmon/hwmon4/temp1_input"
}

battery 0 {
        format = "%status %percentage"
        path = "/sys/class/power_supply/BAT%d/uevent"
        integer_battery_capacity = true
        status_chr = "⚡ CHARGING"
        status_bat = "BATTERY"
        status_full = "BATTERY"
        last_full_capacity = true
}

path_exists VPN {
        # path exists when a VPN tunnel launched by nmcli/nm-applet is active
        path = "/proc/sys/net/ipv4/conf/tun0"
        format = "VPN: ON"
        format_down = ""
}

load {
        format = "%1min %5min %15min"
}

memory {
        format = "MEMORY: %used"
        threshold_degraded = "10%"
        format_degraded = "MEMORY: %free"
}

disk "/" {
        format = "%free"
}

volume master {
        format = "%volume"
        format_muted = "MUTED (%volume)"
        device = "default"
        mixer = "Master"
        mixer_idx = 0
}

time {
        format = "%m/%d %H:%M"
}

cpu_usage {
        format = "CPU: %usage"
        max_threshold = 99
        format_above_threshold = "CPU: HI"
}

path_exists notification {
        # path exists when alias `notification_diable` runs
        path = "/tmp/notification_disable"
        format = "NOTI: OFF"
        format_down = ""
}

path_exists earphone_enable {
        # path exists when alias `toggle_sound` runs
        path = "/tmp/earphone_enable"
        format = ""
        format_down = "SPEAKER"
}
