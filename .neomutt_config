set use_from = yes
set envelope_from = yes

# Ensure TLS is enforced
set ssl_starttls = yes
set ssl_force_tls = yes
set imap_keepalive = 900
set folder = "imaps://imap.gmail.com:993"
set spoolfile = "+INBOX"
set record = "+[Gmail]/Sent Mail"
set postponed = "+[Gmail]/Drafts"
set header_cache = "~/.mutt/cache/headers"
set message_cachedir = "~/.mutt/cache/bodies"
set certificate_file = "~/.mutt/certificates"
set move = no

# Needed to get and display mail (imap-fetch-mail)
set editor = "vim"
set charset = "utf-8"
set record = ""

set delete = yes # automatically purge without promt

# Binding 'gi' will alias 'g'  Before, try: 'bind index g noop'  https://neomutt.org/guide/configuration.html#bind-warnings
bind index,pager g noop
bind index,pager M noop

macro index gi "<change-folder>=INBOX<enter>" "go to inbox"
macro index,pager Mi ";<save-message>=INBOX<enter><enter>" "move mail to inbox"
macro index gs "<change-folder>=[Gmail]/Starred<enter>" "go to starred messages"
macro index,pager Ms ";<save-message>=[Gmail]/Starred<enter><enter>" "move mail to Starred"
macro index ga "<change-folder>=[Gmail]/All%20Mail<enter>" "go to archive"
macro index,pager D "<sync-mailbox>" "save changes to mail box"

# Source alias
source ~/.neomutt_alias
